        private void btn_Igual_Click(object sender, EventArgs e)
        {
            string expr = txt_pantalla.Text;
            try
            {
                var parser = new Controlador_con();
                var calcCtrl = new Controlador_calculadora();
                var parsed = parser.ParseExpression(expr);
                decimal result = calcCtrl.CalculateResult(parsed);

                // Limpiar antes de mostrar la respuesta
                txt_pantalla.Clear();
                txt_pantalla.AppendText(result.ToString(CultureInfo.InvariantCulture));
            }
            catch (DivideByZeroException)
            {
                txt_pantalla.Clear();
                MessageBox.Show("Error: División por cero", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
            catch (Exception ex)
            {
                txt_pantalla.Clear();
                MessageBox.Show("Error al calcular: " + ex.Message, "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

        private void btn_Suma_Click(object sender, EventArgs e)
        {
            txt_pantalla.AppendText("+");
        }

        private void btn_Resta_Click(object sender, EventArgs e)
        {
            txt_pantalla.AppendText("-");
